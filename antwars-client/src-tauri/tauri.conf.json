{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../ui",
    "distDir": "../ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "AntWarsClient",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://127.0.0.1:8080/*"]
      }
    },
    "windows": [
      {
        "title": "Ant Wars Remake",
        "width": 1365,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.boyaa.antwars.remake",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png"
      ]
    }
  }
}
